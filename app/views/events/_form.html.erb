<div>
  <%= simple_form_for @event, defaults: { input_html: { class: "outline-none focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300" } } do |f| %>
    <div class="flex justify-center">
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="shadow sm:rounded-md sm:overflow-hidden">
          <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
            <div class="grid grid-cols-3 gap-6">
              <div class="col-span-3 sm:col-span-3">
                <label for="event_name" class="block text-sm font-medium text-gray-700">
                  Event Name
                </label>
                <div class="mt-1 flex rounded-md shadow-sm">
                  <%= f.input :name, label: false, autofocus: true, error: 'Event Name is mandatory, please specify one' %>
                </div>
                <!-- <p class="mt-2 text-sm text-gray-500">
                  Brief description for your profile. URLs are hyperlinked.
                </p> -->
              </div>
            </div>

            <div>
              <label for="location" class="block text-sm font-medium text-gray-700">
                Location
              </label>
              <div class="mt-1">
                <%= f.input :location, label: false, error: 'Location is mandatory, please specify one' %>
              </div>
            </div>
            
            <div>
              <label for="date" class="block text-sm font-medium text-gray-700">
                Date
              </label>
              <div class="mt-1">
                <%= f.input :date, as: :date, start_year: Date.today.year,
                                              end_year: Date.today.year + 4,
                                              order: [:day, :month, :year],
                                              label: false, error: 'Date is mandatory, please specify one',
                                              html5: true %>
              </div>
            </div>

            <div class="flex justify-center mt-1 gap-24">
              <%= f.button :submit, "Schedule Event", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              <%= link_to 'Cancel', events_path, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
